node {
  def gitcommit
  def contenedortest=docker.image('node')
  
  stage('VerificaciÃ³n SCM') {
   checkout scm
   sh "git rev-parse --short HEAD > .git/commit-id"                        
   gitcommit = readFile('.git/commit-id').trim()
  }

  stage('Test Node.js'){
    contenedortest.pull()
    contenedortest.inside {
      sh 'npm install --only=dev'
      sh 'npm test'
    }
  }

}

